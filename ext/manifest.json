{
  "manifest_version": 3,
  "name": "watch-party-ext",
  "description": "See your favorite movies with your friends",
  "version": "1.0",
  "action": {
    "default_title": "Watch Party"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.primevideo.com/*"
      ]
    }
  ]
}